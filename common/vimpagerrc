set nocompatible
filetype plugin on | syn on

let &rtp.=','.expand('~/.vim/addons/vice')
call vice#Initialize({
    \ 'addons': [
        \ 'github:zeekay/AnsiEsc.vim',
        \ 'github:zeekay/vice-colorful',
        \ 'github:zeekay/vice-standard-issue',
    \ ]
\ })

let vimpager_disable_x11 = 1
let vimpager_scrolloff = 0
let loaded_matchparen = 1

func! s:Escape()
    set laststatus=0

    " Use AnsiEsc for highlighting if ft is not detected.
    if &ft == ''
        so ~/.vim/addons/AnsiEsc.vim/plugin/cecutil.vim
        so ~/.vim/addons/AnsiEsc.vim/plugin/AnsiEscPlugin.vim
        so ~/.vim/addons/AnsiEsc.vim/autoload/AnsiEsc.vim

        " Initialize highlighting
        AnsiEsc
        " Change default for ansiWhite
        hi ansiWhite ctermfg=245
    endif
endf

func! s:JumpToFirstDiff()
    if &ft == 'diff'
        normal gg]]
        echo
    endif
endf

au BufReadPost * call s:Escape()
au VimEnter * call s:JumpToFirstDiff()

nnoremap ; :
vnoremap ; :
inoremap <Esc> <Esc>`^

map <leader>q :q<cr>
nnoremap J <c-d>
nnoremap K <c-u>
vnoremap J <c-d>
vnoremap K <c-u>
nnoremap Q ZQ
inoremap <c-u> <c-o>dd

map <cr> <cr>
map <c-d> <c-d>
map <c-u> <c-u>
map j <cr>
map k k
map h h
map l l
map g g
map gg gg
map A $
map w w
map W W
map b b
map B B
map <c-f> <c-f>
map <c-b> <c-b>
map { {
map } }
map y y
map z z
vmap G G

color hybrid
hi Normal ctermbg=235

" vim:set filetype=vim:
