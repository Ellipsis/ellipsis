[advice]
    statusHints     = false

[alias]
    br              = branch
    ci              = commit
    co              = checkout
    coi             = checkout-index
    coi-ours        = checkout-index -f -a --stage=2
    coi-theirs      = checkout-index -f -a --stage=3
    cp              = cherry-pick
    df              = diff
    ds              = diff --stat
    dc              = diff --cached
    ds              = diff --staged
    g               = grep --break --heading --line-number
    last            = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset' -n 20
    lc              = log ORIG_HEAD.. --stat --no-merges
    lp              = log --patch --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset'
    ls              = log --stat --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset'
    mt              = mergetool -y
    pu              = pull
    pul             = pull
    pus             = push
    rb              = rebase
    rbc             = rebase --continue
    rbs             = rebase --skip
    rl              = reflog
    rp              = remote prune
    rs              = remote show
    rt              = remote
    ru              = remote update
    sb              = show-branch
    st              = status -s

    catchup         = log --patch --reverse --topo-order _ribbon..origin/master
    changes         = diff --name-status -r
    current-branch  = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
    diffstat        = diff --stat
    fetch-all       = fetch --depth=999999999
    lost            = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"
    pom             = push --set-upstream origin master
    pop             = stash pop
    record          = !sh -c '(git add -p -- $@ && git commit) || git reset' --
    reset-origin    = !git fetch && git reset --hard "origin/`git rev-parse --abbrev-ref HEAD`"
    ribbon          = tag --force _ribbon origin/master
    root            = !pwd
    serve           = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    staged          = diff --cached
    svn-ci          = svn dcommit
    svn-up          = svn rebase
    tags            = tag -l
    track           = checkout -t
    unstage         = reset HEAD
    unstaged        = diff

[branch]
    autosetupmerge  = true

[color]
    branch          = auto
    diff            = auto
    interactive     = true
    status          = auto
    ui              = auto

[core]
    autocrlf        = false
    excludesfile    = ~/.cvsignore
    whitespace      = trailing-space,space-before-tab

[diff]
    mnemonicprefix  = true
    renames         = copies

[gist]
    browse          = true

[github]
    password        = !security 2>&1 >/dev/null find-generic-password -gs github.password | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'
    user            = zeekay

[grep]
    lineNumber      = true

[instaweb]
    httpd           = webrick

[merge]
    stat            = true
    tool            = vim

[mergetool]
    keepBackup      = false

[mergetool "vim"]
    cmd             = vim "+Gdiff" $MERGED -c 'wincmd h' -c 'close' -c 'Gread :2' -c 'au QuitPre <buffer> qa!'

[push]
    default         = tracking

[rebase]
    autosquash      = true

[rerere]
    enabled         = false

[user]
    email           = zk@monoid.io
    name            = zeekay
