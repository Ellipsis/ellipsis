[user]
    name            = zeekay
    email           = zeekayy@gmail.com

[mergetool "mvim"]
    cmd             = mvim "+Gdiff" $MERGED -c 'wincmd h' -c 'close' -c 'Gread :2' -c 'map Q :qa<cr>' -c 'map <leader>q :qa<cr>'

[merge]
    tool            = mvim
    stat            = true

[alias]
    br              = branch
    sb              = show-branch
    ci              = commit
    co              = checkout
    coi             = checkout-index
    coi-ours        = checkout-index -f -a --stage=2
    coi-theirs      = checkout-index -f -a --stage=3
    cp              = cherry-pick
    df              = diff
    ds              = diff --stat
    last            = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset' -n 20
    ls              = log --stat --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset'
    lp              = log --patch --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset'
    lc              = log ORIG_HEAD.. --stat --no-merges
    mt              = mergetool -y
    st              = status -s
    rb              = rebase
    rbc             = rebase --continue
    rbs             = rebase --skip
    rl              = reflog
    rs              = remote show
    rt              = remote
    ru              = remote update
    rp              = remote prune
    changes         = diff --name-status -r
    current-branch  = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
    diffstat        = diff --stat
    record          = !sh -c '(git add -p -- $@ && git commit) || git reset' --
    serve           = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    staged          = diff --cached
    track           = checkout -t
    unstage         = reset HEAD
    unstaged        = diff

    vim             = !vim -o $1 -c 'setlocal bufhidden=delete' -c 'Gedit %' -c 'wincmd w' -c 'wincmd q'
    mvim            = !mvim -o $1 -c 'setlocal bufhidden=delete' -c 'Gedit %' -c 'wincmd q'

    svn-up          = svn rebase
    svn-ci          = svn dcommit

    ribbon          = tag --force _ribbon origin/master
    catchup         = log --patch --reverse --topo-order _ribbon..origin/master

    lost            = !"git fsck | awk '/dangling commit/ {print $3}' | git show --format='SHA1: %C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset' --stdin | awk '/SHA1/ {sub(\"SHA1: \", \"\"); print}'"

[core]
    excludesfile    = ~/.cvsignore
    autocrlf        = false
    whitespace      = trailing-space,space-before-tab

[color]
    diff            = auto
    status          = auto
    branch          = auto
    interactive     = true
    ui = auto

[rebase]
    autosquash      = true

[instaweb]
    httpd           = webrick

[github]
    user            = zeekay
    password        = !security 2>&1 >/dev/null find-generic-password -gs github.password | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'

[gist]
    private         = true
    browse          = true

[diff]
    mnemonicprefix  = true
    renames         = copies

[advice]
    statusHints     = false

[branch]
    autosetupmerge  = true

[push]
    default         = tracking

[rerere]
    enabled         = true
