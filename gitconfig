[user]
    name            = zeekay
    email           = zeekayy@gmail.com
[mergetool "mvim"]
    cmd             = mvim "+Gdiff" $MERGED -c 'wincmd h' -c 'close' -c 'Gread :2'
[merge]
    tool            = mvim
[alias]
    co              = checkout
    ci              = commit
    st              = status -s
    a               = add .
    b               = branch
    l               = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pullf           = ! git reset --hard && git pull
    lc              = log ORIG_HEAD.. --stat --no-merges
    fshow           = ! sh -c 'git show --pretty="format:" --name-only $1 | grep -v "^$" | uniq | sed -e "s#^#`git rev-parse --show-toplevel`/#"' -
    vim             = ! sh -c 'vim `git fshow $1`' -
    changes         = diff --name-status -r
    diffstat        = diff --stat -rundo=reset --hard
    record          = ! sh -c '(git add -p -- $@ && git commit) || git reset' --
    serve           = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    cherry-pick-svn = !GIT_EDITOR='sed -i /^git-svn-id:/d' git cherry-pick -e
    branch-svn      = svn branch
    merge-svn       = merge --squash
    up              = svn rebase
    update          = svn rebase
    push-svn        = svn dcommit
[core]
    excludesfile    = ~/.cvsignore
    autocrlf        = false
[color]
    diff            = auto
    status          = auto
    branch          = auto
    interactive     = true
[rebase]
    autosquash      = true
[instaweb]
    httpd           = webrick
[github]
    user            = zeekay
[gist]
    private         = true
    browse          = true
