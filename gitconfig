[user]
    name            = zeekay
    email           = zeekayy@gmail.com
[mergetool "mvim"]
    cmd             = mvim "+Gdiff" $MERGED -c 'wincmd h' -c 'close' -c 'Gread :2' -c 'map <leader>q :qa<cr>' -c 'map Q :qa<cr>'
[merge]
    tool            = mvim
[alias]
    co              = checkout
    coi-ours         = checkout-index -f -a --stage=2
    coi-theirs       = checkout-index -f -a --stage=3
    ci              = commit
    st              = status -s
    a               = add .
    b               = branch
    l               = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white)%an, %ar%Creset'
    pullf           = reset --hard && git pull
    lc              = log ORIG_HEAD.. --stat --no-merges
    vim             = !vim -o $1 -c 'setlocal bufhidden=delete' -c 'Gedit %' -c 'wincmd w' -c 'wincmd q'
    mvim            = !mvim -o $1 -c 'setlocal bufhidden=delete' -c 'Gedit %' -c 'wincmd q'
    mt              = mergetool -y
    changes         = diff --name-status -r
    diffstat        = diff --stat -rundo=reset --hard
    unmerged        = !git --no-pager diff --name-only --diff-filter=U
    unstage         = reset HEAD
    staged          = diff --cached
    unstaged        = diff
    current-branch  = !git symbolic-ref -q HEAD | sed -e 's|^refs/heads/||'
    track           = checkout -t # Usage: git track origin/feature-123-login-form
    record          = !sh -c '(git add -p -- $@ && git commit) || git reset' --
    serve           = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    cherry-pick-svn = !GIT_EDITOR='sed -i /^git-svn-id:/d' git cherry-pick -e
    up              = svn rebase
    update          = svn rebase
    push-svn        = svn dcommit
[core]
    excludesfile    = ~/.cvsignore
    autocrlf        = false
[color]
    diff            = auto
    status          = auto
    branch          = auto
    interactive     = true
[rebase]
    autosquash      = true
[instaweb]
    httpd           = webrick
[github]
    user            = zeekay
[gist]
    private         = true
    browse          = true
