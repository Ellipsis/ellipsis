#!/bin/sh

# echos repo names & version info

basedir="$( cd -P "$( dirname "$0" )" && pwd )"/..

echo "\033[1mdotfiles\033[0m `hg id -n $basedir`"
hg status $basedir

for dir in $basedir/dot-*; do
    name=`echo $dir | rev | cut -d "/" -f1 | rev | cut -c5-`
    echo "\033[1m$name\033[0m `hg id -n $dir`"
    hg status $dir
done
